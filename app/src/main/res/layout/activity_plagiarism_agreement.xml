<!-- activity_plagiarism_agreement.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F3E8FF"
    android:gravity="center_vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Promise of your own work."
        android:textSize="18sp"
        android:textColor="#6D4AB3"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is my promise about the work I submitted is my own work during the examination duration."
        android:textSize="14sp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My name is"
        android:textSize="14sp"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/nameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vu Quynh Chi"
        android:enabled="false"
        android:textColor="#000000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Roll number is"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/rollNumberText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HE176029"
        android:enabled="false"
        android:textColor="#000000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="If I took the work from others, I will accept any type of noticed punishments from the school because of plagiarism violation."
        android:textSize="12sp"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/agreedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I Agreed"
        android:backgroundTint="#6D4AB3"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp" />
</LinearLayout>
